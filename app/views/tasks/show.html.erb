<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @status %></p>

<%= link_to("Back to list", tasks_path) %>
<%= link_to("Edit this task", edit_path(@task)) %>
<%= link_to "Delete #{@task.title}",
            destroy_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
